# Docker 환경 변수 템플릿
# 사용법: cp .env.docker.example .env.docker

# Environment
ENVIRONMENT=docker  # development, docker, production

# Database (Docker PostgreSQL)
DATABASE_URL=postgresql://lawuser:lawpassword@localhost:5432/lawdb

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key
KAKAO_MAP_API_KEY=your_javascript_key
KAKAO_REST_API_KEY=your_rest_api_key

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=legal_documents

# Embedding
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=100

# Modules (빈 배열이면 모두 활성화)
ENABLED_MODULES=[]
